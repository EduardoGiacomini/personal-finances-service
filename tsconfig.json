{
  "compilerOptions": {
    "experimentalDecorators": true,
    "incremental": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": false,
    "skipLibCheck": true,
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@infra/*": ["./src/infra/*"]
    }
  },
  "include": [
    "src",
    "test"
  ]
}
